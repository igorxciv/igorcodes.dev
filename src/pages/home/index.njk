<main id="main" class="main column">
	<div class="main__gaps">
		<div class="intro">
			<p class="intro__hi">{{ intro.hi | safe }}</p>
			<h1 class="intro__name">{{ intro.name | safe }}</h1>
		</div>
		<section class="about">
			<header class="caption">
				<h2 class="caption__title">About</h2>
			</header>
			<div class="content content-block">
				{% for paragraph in about.paragraphs %}
					<p class="about__details">{{ paragraph | safe }}</p>
				{% endfor %}
			</div>
		</section>
		<section class="experience">
			<header class="caption">
				<h2 class="caption__title">Experience</h2>
			</header>
			<div class="content content-block experience">
				{% for item in experience.items %}
					<article class="experience__place">
						<h3>{{ item.title | safe }} at {{ item.company | safe }}</h3>
						<div>
							<time>{{ item.period.from | safe }}</time> - <time>{{ item.period.to | safe }}</time>
						</div>
						<p>{{ item.description | safe }}</p>
						<p class="tags">
							{% for techItem in item.tech %}
								<span class="tags__item">{{ techItem | safe }}</span>
							{% endfor %}
						</p>
					</article>
				{% endfor %}
			</div>
		</section>
		<section class="projects">
			<header class="caption">
				<h2 class="caption__title">Projects</h2>
			</header>
		</section>
	</div>
</main>
